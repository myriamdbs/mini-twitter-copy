<div class="container">
  <h1>Tweets relative to "<%= @keyword.word.capitalize %>"</h1>
  <button id="refresh-tweet" data-id="<%= @keyword.id %>" type="button">Refresh Tweets!</button>
  <div>
    <% @keyword.tweets.each do |tweet| %>
      <ul class="tweets-list" data-content="<%= tweet.content %>">
        <li><%= tweet.content %></li>
      </ul>
    <% end %>
  </div>
</div>
